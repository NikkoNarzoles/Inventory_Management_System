@using Inventory_Management_System.Models.StoreModels
@model Order
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Receipt - NeKo</title>

    <link rel="stylesheet" href="~/css/CartReciepts.css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
</head>

<body>

    <div class="bg-blur"></div>

    <main class="content">

        <nav class="nav-main">
            <div class="Neko">NeKo</div>

            @if (ViewBag.WalletBalance != null)
            {
                <div class="wallet-display">Wallet: $@ViewBag.WalletBalance</div>
            }

            <div class="font_title">Order Receipt</div>
        </nav>

        @if (TempData["Error"] != null)
        {
            <div class="pixel-error">
                @TempData["Error"]
            </div>
        }

        @if (Model == null || Model.OrderItems == null || !Model.OrderItems.Any())
        {
            <div class="empty-receipt">
                <p class="empty-message">No order details found.</p>
                <div class="button-container">
                    <img src="~/Images/bg/buy.png" class="imgbg">
                        <a asp-action="Index" asp-controller="StoreItems" class="pindot">Back to Shop</a>
                </div>
            </div>
        }
        else
        {
            <div class="box">
                <img src="~/Images/AddToCart.png" class="board">

                <div class="banner-container">

                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="paper">
                            <img src="~/Images/bg/paper.png" class="banner-bg">

                            <div class="upper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Item Name</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th>@item.ItemName</th>
                                            <th>$@item.UnitPrice</th>
                                            <th>@(item.Quantity)x</th>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="lower">
                                <div class="right">
                                    <div class="tprice">Total: $@(item.Quantity* item.UnitPrice)</div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div class="buttons">

                    <div class="mid">
                        <div class="totalamount">Total Amount: $@Model.TotalAmount</div>
                        <div class="totalamount">Date: @Model.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy - hh:mm tt")</div>
                    </div>

                    <div class="button-container">
                        <img src="~/Images/bg/buy.png" class="imgbg">
                        <a asp-action="Index" asp-controller="StoreItems" class="pindot">Back</a>
                    </div>

                </div>
            </div>
        }

    </main>

</body>
</html>
