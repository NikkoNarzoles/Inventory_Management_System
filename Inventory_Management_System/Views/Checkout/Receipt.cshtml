@model Inventory_Management_System.Models.Order

@{
    Layout = null;
}

<h2>Order Receipt</h2>

@if (Model == null || Model.OrderItems == null || !Model.OrderItems.Any())
{
    <p>No order details found.</p>
}
else
{
    <p><strong>Order ID:</strong> @Model.Id</p>
    <p><strong>Date:</strong> @Model.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy hh:mm tt")</p>

    <table border="1" cellpadding="8">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity* item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total Amount: @Model.TotalAmount</h3>


    <a asp-action="Index"
       asp-controller="StoreItems"
       class="button-box one">
        Back
    </a>
}
