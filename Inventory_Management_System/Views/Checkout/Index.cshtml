@model Inventory_Management_System.ViewModels.CheckoutIndexViewModel


@{
    Layout = null;
}

@if (TempData["Error"] != null)
{
    <div class="pixel-error">
        @TempData["Error"]
    </div>
}


<h2>Checkout Confirmation</h2>

@if (Model == null || Model.Items == null || !Model.Items.Any())
{
    <p>No items selected.</p>
}
else
{
    <table border="1" cellpadding="8">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity* item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total Amount: @Model.TotalAmount</h3>

    <br />

    <!-- ⭐ Confirm Checkout -->
    <form asp-action="CheckoutSelected" method="post">
        <button type="submit">Confirm Checkout</button>
    </form>
}
