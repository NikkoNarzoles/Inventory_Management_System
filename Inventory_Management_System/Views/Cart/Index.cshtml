@model Inventory_Management_System.ViewModels.CartViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart - NeKo</title>

    <link rel="stylesheet" href="~/css/Addtocart.css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
</head>

<body>

    <div class="bg-blur"></div>

    <main class="content">

        <nav class="nav-main">
            <a asp-action="Index" asp-controller="StoreItems" class="Neko">Neko</a>
            <div class="font_title">Shopping Cart</div>
        </nav>

        @if (Model == null || Model.Items == null || !Model.Items.Any())
        {
            <div class="empty-cart">
                <p class="empty-message">Your cart is empty.</p>
                <div class="button-container">
                    <img src="~/Images/bg/buy.png" class="imgbg">
                    <a asp-action="Index" asp-controller="StoreItems" class="pindot">Back to Shop</a>
                </div>
            </div>
        }
        else
        {
            <div class="box">
                <img src="~/Images/AddToCart.png" class="board">

                <div class="banner-container">

                    <p id="checkoutWarning" class="warning-message">
                        No item is selected.
                    </p>

                    @foreach (var item in Model.Items)
                    {
                        <div class="paper">
                            <img src="~/Images/bg/paper.png" class="banner-bg">

                            <div class="upper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Item Name</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th>@item.ItemName</th>
                                            <th>$@item.UnitPrice</th>
                                            <th>
                                                <form asp-action="UpdateQuantity" method="post" class="qty-form">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                    <input type="number"
                                                           name="quantity"
                                                           value="@item.Quantity"
                                                           min="1"
                                                           class="quan qty-input"
                                                           data-price="@item.UnitPrice"
                                                           data-item-id="@item.CartItemId">
                                                </form>
                                            </th>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="lower">
                                <form asp-action="RemoveItem" method="post" class="remove-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                    <button type="submit" class="left">Remove</button>
                                </form>

                                <div class="right">
                                    <div class="tprice row-total" data-item-id="@item.CartItemId">
                                        Total: $@(item.Quantity* item.UnitPrice)
                                    </div>
                                    <div class="checkbox">
                                        <form asp-action="ToggleSelect" method="post" class="select-form">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <input type="checkbox"
                                                   name="selected"
                                                   value="true"
                                                   class="select-checkbox"
                                                   @(item.IsSelected ? "checked" : "")
                                                   onchange="this.form.submit()" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div class="buttons">
                    <div class="button-container">
                        <img src="~/Images/bg/buy.png" class="imgbg">
                        <a asp-action="Index" asp-controller="StoreItems" class="pindot">Back</a>
                    </div>

                    <div class="button-container">
                        <img src="~/Images/bg/buy.png" class="imgbg">
                        <a asp-controller="Checkout" asp-action="Index" id="checkoutBtn" class="pindot">Check <br> Out</a>
                    </div>
                </div>
            </div>
        }

    </main>

    <script>
        // Real-time quantity update with instant total calculation
        document.addEventListener("input", function (e) {
            if (!e.target.classList.contains("qty-input")) return;

            let input = e.target;
            let cartItemId = input.dataset.itemId;
            let qty = parseInt(input.value) || 1;
            let price = parseFloat(input.dataset.price);

            // Update the total price display immediately
            let totalCell = document.querySelector(`.row-total[data-item-id="${cartItemId}"]`);
            if (totalCell) {
                totalCell.textContent = `Total: $${(price * qty).toFixed(2)}`;
            }

            // Send update to server
            let form = input.closest("form");
            let token = form.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('/Cart/UpdateQuantity', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: `cartItemId=${cartItemId}&quantity=${qty}`
            });
        });

        // Checkout validation
        document.getElementById("checkoutBtn")?.addEventListener("click", function (e) {
            let anyChecked = document.querySelectorAll(
                "input[type='checkbox'][name='selected']:checked"
            ).length > 0;

            let warning = document.getElementById("checkoutWarning");

            if (!anyChecked) {
                e.preventDefault();
                warning.style.display = "block";

                // Auto-hide warning after 3 seconds
                setTimeout(() => {
                    warning.style.display = "none";
                }, 3000);
            } else {
                warning.style.display = "none";
            }
        });
    </script>

</body>
</html>
