@model Inventory_Management_System.ViewModels.UserProfileViewModel

<h2>@Model.User.first_name's Shop</h2>
<p><strong>Theme ID:</strong> @Model.User.theme_id</p>

<hr />

@if (!Model.Items.Any())
{
    <p>This user has no items.</p>
}
else
{
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.item_name</td>
                    <td>@item.price</td>
                    <td>@item.quantity</td>
                    <td>@item.description</td>
                </tr>
            }
        </tbody>
    </table>
}


