@model Inventory_Management_System.ViewModels.UserViewModel

<h2>Register User</h2>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="first_name"></label>
        <input asp-for="first_name" />
        <span asp-validation-for="first_name"></span>
    </div>

    <div>
        <label asp-for="last_name"></label>
        <input asp-for="last_name" />
        <span asp-validation-for="last_name"></span>
    </div>

    <div>
        <label asp-for="username"></label>
        <input asp-for="username" />
        <span asp-validation-for="username"></span>
    </div>

    <div>
        <label asp-for="email"></label>
        <input asp-for="email" />
        <span asp-validation-for="email"></span>
    </div>

    <div>
        <label asp-for="passwordhash">password</label>
        <input asp-for="passwordhash" type="password" />
        <span asp-validation-for="passwordhash"></span>
    </div>

    <button type="submit">Register</button>
    <a asp-action="Index">Cancel</a>
</form>
