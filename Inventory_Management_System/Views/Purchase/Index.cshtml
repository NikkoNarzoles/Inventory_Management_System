@model IEnumerable<Inventory_Management_System.DTOs.PurchaseDto>
@{
    ViewData["Title"] = "Purchases";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Orders - NeKo</title>

    <link rel="stylesheet" href="~/css/Orders.css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
</head>

<body>

    <div class="bg-blur"></div>

    <main class="content">

        <nav class="nav-main">
            <a asp-action="Index" asp-controller="StoreItems" class="Neko">NeKo</a>
            <div class="font_title">All Orders</div>
        </nav>

        @if (Model == null || !Model.Any())
        {
            <div class="empty-orders">
                <p class="empty-message">No orders yet.</p>
                <div class="button-container">
                    <img src="~/Images/bg/buy.png" class="imgbg">
                    <a asp-action="Index" asp-controller="StoreItems" class="pindot">Back</a>
                </div>
            </div>
        }
        else
        {
            <div class="box">
                <img src="~/Images/AddToCart.png" class="board">

                <div class="banner-container">

                    @foreach (var item in Model)
                    {
                        <div class="paper">
                            <img src="~/Images/bg/paper.png" class="banner-bg">

                            <div class="upper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Qty</th>
                                            <th>Total</th>
                                            <th>Buyer</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th>@item.item_name</th>
                                            <th>@(item.quantity_bought)x</th>
                                            <th>$@item.total_price</th>
                                            <th>@item.buyer_name</th>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="lower">
                                <div class="date-info">
                                    <i class="fas fa-calendar"></i>
                                    @item.purchase_date.ToLocalTime().ToString("MMM dd, yyyy - hh:mm tt")
                                </div>

                                <a asp-action="Delete"
                                   asp-route-id="@item.id"
                                   class="delete-btn"
                                   onclick="return confirm('Are you sure you want to delete this order?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    }

                </div>

                <div class="buttons">
                    <div class="button-container">
                        <img src="~/Images/bg/buy.png" class="imgbg">
                        <a asp-action="Index" asp-controller="StoreItems" class="pindot">Back</a>
                    </div>
                </div>
            </div>
        }

    </main>

</body>
</html>
