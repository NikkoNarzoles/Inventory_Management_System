@model Inventory_Management_System.DTOs.StoreItemsDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Item</title>

    <link rel="stylesheet" href="~/css/Itemdelete.css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
</head>

<body>

    <div class="bg-blur"></div>

    <main class="content">

        <nav class="nav-main">
            <a asp-action="Index" asp-controller="StoreItems" class="Neko">Neko</a>
            <div class="font_title">About Us</div>
        </nav>

        <form asp-action="DeleteConfirmed" method="post" class="card-container">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="id" />

            <img src="/Images/userpaper.png" alt="" class="bg-image">

            <div class="container">

                <div class="new">Delete Item</div>

                <div class="delete">
                    <p>Item Code:</p> @Model.item_code
                </div>

                <div class="delete">
                    <p>Item Name:</p> @Model.item_name
                </div>

                <div class="delete">
                    <p>Quantity:</p> @Model.quantity
                </div>

                <div class="delete">
                    <p>Price:</p> @Model.price
                </div>

                <div class="button">
                    @if (User.IsInRole("Admin"))
{
                    <a asp-action="Index"
                       asp-controller="Profile"
                       class="button-box one">
                        Cancel
                    </a>

                    <button type="submit" class="button-box one">
                        Delete
                    </button>
}

                </div>

            </div>

        </form>

    </main>

</body>
</html>
