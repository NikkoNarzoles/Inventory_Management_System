@model IEnumerable<Inventory_Management_System.DTOs.StoreItemsDto>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Items</title>

    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
</head>

<body>

<div class="bg-blur"></div>

                        <main class="content">

                        <form asp-action="Index" method="get" class="filter-form">
                             @Html.AntiForgeryToken()

                        <!-- NAV -->
                        <nav class="nav-main">

                                        <div class="Neko">NeKo</div>

                                        <div class="mid">

                                                    <div class="search">
                                                            <div class="search-bg">

                                                            <input type="text"
                                                                   name="search"
                                                                   value="@ViewData["Search"]"
                                                                   class="search-content"
                                                                   placeholder="Search" />

                                                                    <div class="search-icon"></div>
                                                            </div>

                                                            <div class="item_user">
                                                                        <select name="mode" class="itus-select">
                                                                            <option value="items"
                                                                                    selected="@(ViewData["Mode"]?.ToString() != "users")">
                                                                            Items
                                                                            </option>

                                                                            <option value="users"
                                                                                    selected="@(ViewData["Mode"]?.ToString() == "users")">
                                                                            Users
                                                                            </option>
                                                                        </select>
                                                            </div>

                                                    </div>
                                        </div>

                                        <div class="settings">
                                                <div class="Gear">
                                                        <i class="fa-solid fa-gear settings-icon"></i>
                                                </div>

                                                <div class="settings-menu">

                                                        @if (User.IsInRole("Admin"))
                                                        {
                                                        <a asp-controller="Purchase" asp-action="Index" class="setting-button">
                                                        Purchase
                                                        </a>

                                                        <a asp-action="Create" class="setting-button">
                                                        Create
                                                        </a>

                                                        <a asp-controller="User" asp-action="Index" class="setting-button">
                                                        Users
                                                        </a>
                                                        }

                                                        <a asp-controller="Profile" asp-action="Index" class="setting-button">
                                                        Profile
                                                        </a>

                                                        <a asp-controller="Cart" asp-action="Index" class="setting-button">
                                                        Cart
                                                        </a>

                                                        <div class="setting-button">About Us</div>

                                                </div>
                                        </div>

                        </nav>

                        <!-- STORE BOX -->
                        <div class="item-box">

                                        <img src="~/Images/storebox.png" class="item-box-frame">

                                        <div class="item-sort">
                                                    <select name="sortBy" class="sort-select" onchange="this.form.submit()">
                                                            <option value="">Sort By</option>
                                                            <option value="NameAsc" selected="@(ViewData["SortBy"]?.ToString()=="NameAsc")">Name ↑</option>
                                                            <option value="NameDesc" selected="@(ViewData["SortBy"]?.ToString()=="NameDesc")">Name ↓</option>
                                                            <option value="PriceAsc" selected="@(ViewData["SortBy"]?.ToString()=="PriceAsc")">Price ↑</option>
                                                            <option value="PriceDesc" selected="@(ViewData["SortBy"]?.ToString()=="PriceDesc")">Price ↓</option>
                                                    </select>
                                        </div>

                                        <nav class="nav-box">
                                                <div class="font_title_box">Name</div>
                                                <div class="font_title_box">Price</div>
                                                <div class="font_title_box">Stocks</div>
                                        </nav>

                                        <div class="item-content">

                                                    @foreach (var item in Model)
                                                    {
                                                            <div class="item-parent">

                                                                    <img src="~/Images/bg/paper.png" class="item-parent-frame">

                                                                    <div class="item-context">

                                                                                <div class="item-info">
                                                                                    <div>@item.item_name</div>

                                                                                    <div class="peso">
                                                                                        <p>$</p>@item.price.ToString("#,0.##")
                                                                                    </div>

                                                                                    @if (item.quantity <= 0)
                                                                                    {
                                                                                        <div class="outofstock">Out of Stock</div>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <div>@item.quantity x</div>
                                                                                    }
                                                                                    </div>

                                                                                    <div class="item-descrip">
                                                                                        <p style="margin-right:20px;">Description:</p>
                                                                                        <p>@item.description</p>
                                                                                    </div>

                                                                    </div>

                                                                    <div class="buttons">

                                                                            <button type="button"
                                                                                    class="Buy2"
                                                                                    onclick="addToCart(@item.id)">
                                                                                <i class="fa-solid fa-cart-shopping"></i>
                                                                            </button>




                                                                            @if (User.IsInRole("Admin"))
                                                                            {
                                                                            <a asp-action="Edit"
                                                                               asp-route-id="@item.id"
                                                                               class="Buy">
                                                                            Edit
                                                                            </a>

                                                                            <a asp-action="Delete"
                                                                               asp-route-id="@item.id"
                                                                               asp-route-returnUrl="@Context.Request.Path"
                                                                               class="Buy">
                                                                            Delete
                                                                            </a>
                                                                            }

                                                                            <a asp-controller="StoreItems"
                                                                                asp-action="Buy"
                                                                                asp-route-id="@item.id"
                                                                                asp-route-returnUrl="@Context.Request.Path"
                                                                                class="Buy">
                                                                                Buy
                                                                            </a>

                                                                    </div>

                                                            </div>
                                                    }

                                        </div>

                        </div>

                        </form>

</main>

</body>
</html>


<script>
function addToCart(id){

    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

    fetch('/Cart/AddToCart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'RequestVerificationToken': token
        },
        body: `storeItemId=${id}`
    }).then(() => {

        // ⭐ REDIRECT USER TO CART
        window.location.href = "/Cart";

    });
}

</script>
